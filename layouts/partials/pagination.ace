div.pagination
  ul
    li
      {{ if .HasPrev }}
        a href={{ .Prev.URL }}
          {{ partial "icon" "chevron-left" }}
      {{ else }}
        span
          {{ partial "icon" "chevron-left" }}
      {{ end }}
    li
      {{ if .HasNext }}
        a href={{ .Next.URL }}
          {{ partial "icon" "chevron-right" }}
      {{ else }}
        span
          {{ partial "icon" "chevron-right" }}
      {{ end }}
